<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fragment_select_category"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0000ff"
    tools:context=".ui.fragment.SelectCategoryFragment">

        <TextView
            android:id="@+id/appName"
            android:text="@string/appNameRus"
            android:layout_width="220dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

        <ImageButton
            android:id="@+id/imageButtonDog"
            android:focusable="true"
            android:layout_width="220dp"
            android:layout_height="120dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/appName"
            app:srcCompat="@drawable/dog1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="43dp" />

        <ImageButton
            android:id="@+id/imageButtonCat"
            android:layout_width="220dp"
            android:layout_height="120dp"
            android:layout_marginTop="180dp"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonDog"
            app:srcCompat="@drawable/cat"
            tools:layout_editor_absoluteX="41dp"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/imageButtonDogAndCat"
            android:layout_width="220dp"
            android:layout_height="120dp"
            android:layout_marginTop="310dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonCat"
            app:srcCompat="@drawable/dog_cat" />

    <LinearLayout
        android:layout_width="75dp"
        android:layout_height="177dp"
        android:layout_marginLeft="250dp"
        android:background="#8888ff"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <!--    android:background="@drawable/button_selector" -->
        <Button
            android:id="@+id/add_button"
            android:background="@drawable/selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="add"
           />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/selector"
            tools:text="DEL" />
    </LinearLayout>


</FrameLayout>