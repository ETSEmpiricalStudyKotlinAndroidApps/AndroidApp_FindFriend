<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_select_category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_secondary"
    tools:context=".ui.fragment.SelectCategoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/background_color_secondary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/select_category_title"
            style="@style/TextPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin"
            android:text="@string/select_category_title" />

        <ImageButton
            android:id="@+id/select_category_dog"
            android:layout_width="match_parent"
            android:layout_height="@dimen/select_category_image_button_height"
            android:contentDescription="@null"
            android:focusable="true"
            app:srcCompat="@drawable/dog1" />

        <ImageButton
            android:id="@+id/select_category_cat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/select_category_image_button_height"
            android:contentDescription="@null"
            app:srcCompat="@drawable/cat" />

        <ImageButton
            android:id="@+id/select_category_dog_and_cat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/select_category_image_button_height"
            android:contentDescription="@null"
            app:srcCompat="@drawable/dog_cat" />
    </LinearLayout>

