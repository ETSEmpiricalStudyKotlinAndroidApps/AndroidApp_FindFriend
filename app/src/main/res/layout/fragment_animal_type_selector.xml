<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_select_category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".ui.fragment.AnimalTypeSelectorFragment">

    <TextView
        android:id="@+id/select_category_title"
        style="@style/TextPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin"
        android:textAlignment="center"
        android:layout_weight="0.1"
        android:text="@string/animal_type_title" />

    <ImageButton
        android:id="@+id/select_dog_type"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/salmon"
        android:contentDescription="@null"
        android:focusable="true"
         android:scaleType="centerInside"
        app:srcCompat="@drawable/dog" />

    <ImageButton
        android:id="@+id/select_cat_type"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/burnt_sienna"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/cat" />

    <ImageButton
        android:id="@+id/select_dog_and_cat_type"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/coral"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/cat_dog" />

